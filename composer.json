{
    "name": "spatie/symfony-ignition-bundle",
    "description": "A beautiful error page for Symfony apps",
    "keywords": [
        "spatie",
        "symfony-ignition-bundle"
    ],
    "homepage": "https://github.com/spatie/symfony-ignition-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/ignition": "^1.0",
        "symfony/dependency-injection": "^4.4 | ^5.4 | ^6.0",
        "symfony/config": "^4.4 | ^5.4 | ^6.0",
        "symfony/http-kernel": "^4.4 | ^5.4 | ^6.0",
        "symfony/event-dispatcher": "^4.4 | ^5.4 | ^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\SymfonyIgnitionBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\SymfonyIgnitionBundle\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
