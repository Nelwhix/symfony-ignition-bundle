{
    "name": "spatie/symfony-ignition-bundle",
    "type": "symfony-bundle",
    "description": "A beautiful error page for Symfony apps",
    "keywords": [
        "spatie",
        "symfony-ignition-bundle"
    ],
    "homepage": "https://github.com/spatie/symfony-ignition-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrew MacRobert",
            "email": "andrew.macrobert@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/ignition": "^1.0",
        "symfony/dependency-injection": "^6.0",
        "symfony/config": "^6.0",
        "symfony/http-kernel": "^6.0",
        "symfony/event-dispatcher": "^6.0",
        "symfony/http-foundation": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/filesystem": "^6.0",
        "symfony/process": "^6.0",
        "symfony/dom-crawler": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\SymfonyIgnitionBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\SymfonyIgnitionBundle\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
